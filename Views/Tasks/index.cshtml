@model TaskViewModel

@{
    ViewData["Title"] = "Task List Management";
} 

<div class="panel panel-default task-panel">
  <div class="panel-heading">@ViewData["Title"]</div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>&#x2714;</td>
        <td>task</td>
        <td>prediction</td>
      </tr>
    </thead>
    @foreach (var item in Model.TaskItems)
    {
        <tr>
          <td>
            <input type="checkbox" name="@item.Id" value="true" class="done-checkbox"/>
          </td>
          <td>@item.Name</td>
          <td>@item.ConclusionDate</td>
        </tr>
    }
  </table>
  <div class="panel-footer add-item-form">
    <form>
      <div id="add-item-error" class="text-danger"></div>
      <label for="add-item-title"> Add new Task</label>
      <input id="add-new-title">
      <button type="button" id="add-item-button">Add</button>
    </form>

  </div>

</div>